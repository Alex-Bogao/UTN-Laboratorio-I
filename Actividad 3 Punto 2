    if (edad1 > 30){
            promedio1 = altura1 , promedio2 ++;

    }

    if (edad2 >30){
       promedio1 = promedio1 + altura2 , promedio2 ++;
    }
    if (edad3 >30){
        promedio1 = promedio1 + altura2, promedio2 ++ ;
    }
    if (edad4 >30){
        promedio1 = promedio1 + altura2 , promedio2 ++ ;
    }
    if (edad5 >30){
        promedio1 = promedio1 + altura2 , promedio2 ++;
    }
    promedio = promedio1 / promedio2 ;


    personasAltas = 0 ;

    if (edad1 > 30){
        personasAltas ++ ;
    }
     if (edad2 > 30){
        personasAltas ++ ;
    }
     if (edad3 > 30){
        personasAltas ++ ;
    }
     if (edad4 > 30){
        personasAltas ++ ;
    }
     if (edad5 > 30){
        personasAltas ++ ;
